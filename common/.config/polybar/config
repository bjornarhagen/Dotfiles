modules-right = battery powermenu audio-device-0 audio-device-1 audio-device-2 volume

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

[module/power]
type = custom/text
content = "Shutdown"
click-left = shutdown 2s; notify-send "Shutting down ..."
padding-right = 10

[module/audio-device-0]
type = custom/text
content = "Screen"
click-left = audio-device.sh -s 0
click-right = audio-device.sh -c 0

[module/audio-device-1]
